<%- include partials/header.ejs %>

<div class="row-sp-btwn">

  <div class="one-third">
    <img src="<%= reviewsAndUser[0].photo %>" alt="User's profile photo">
  </div>

  <div class="two-thirds">
    <h1><%= reviewsAndUser[0].name %></h1>
    <div class="row-sp-btwn">
      <h3>Email</h3>
      <h3><%= reviewsAndUser[0].email %></h3>
    </div>
    <div class="row-sp-btwn">
      <h3>Date Joined</h3>
      <h3><%= reviewsAndUser[0].join_date %></h3>
    </div>


    <% if(reviewsAndUser[0].title){ %>
      <%reviewsAndUser.forEach((review) => { %>
        <div class="box">
          <div class="row-sp-btwn">
            <h2><%= review.title %></h2>
            <h3><%= review.date_created %></h3>
            <div class="delete">
              <img src="/pictures/trash.png" alt="delete">
            </div>
          </div>
          <p><%= review.content %></p>
        </div>
      <% }) %>
    <% } else { %>
      <div class="box">
        <p>This user has not written any reviews</p>
      </div>
    <% } %>
  </div>


</div>

<%- include partials/footer.ejs %>
